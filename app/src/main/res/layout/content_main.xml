<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/back_gradient"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="RIDESHARE"
        android:layout_marginTop="50dp"
        android:translationZ="2dp"
        android:textSize="64sp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryText" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share your Ride"
        android:gravity="center"
        android:layout_below="@+id/logoText"
        android:textSize="32sp"
        android:layout_marginBottom="8dp"
        android:id="@+id/share_your_ride_textview"
        android:textColor="@color/colorPrimaryText"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/share_your_ride_textview"
        android:background="@color/colorPrimaryText"
        android:id="@+id/divider">

    </View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interact with co-travellers"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/divider"
        android:id="@+id/interact_textview"
        android:textColor="@color/colorPrimaryText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/interact_textview"
        android:id="@+id/text_money"
        android:text="Save your costs, afford pocket travel trips by saving money on your travel."/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/text_money">

        <com.facebook.login.widget.LoginButton
            android:background="@drawable/my_fb_button"
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"



            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info"
            android:layout_marginTop="12dp"
            android:text="@string/fb_msg"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryText"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</RelativeLayout>
